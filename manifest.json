{
	"manifest_version"       : 2,
	"short_name"             : "Simple Password Assistant",
	"name"                   : "Simple Password Assistant",
	"description"            : "Simple Password Assistant helps you use easy to remember passwords as secure passwords",
	"version"                : "0.2",
	"browser_action"         : {
		"default_icon" : "icon.png",
		"default_popup": "popup.html"
	},
	"author"                 : "Steven Silvestri <steven.m.silvestri@gmail.com>",
	"permissions"            : [
		"activeTab",
		"storage",
		"https://ajax.googleapis.com/"
	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}